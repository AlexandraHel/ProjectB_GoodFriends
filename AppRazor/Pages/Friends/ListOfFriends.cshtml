@page
@model AppRazor.Pages.ListOfFriendsModel
@{
    ViewData["Title"] = "List friends";
}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@attribute [IgnoreAntiforgeryToken]
<!-- Page List of friends -->
<div class="container px-4 py-4" id="list-of-friends">
    <h2 class="pb-2 border-bottom">List of Friends</h2>
    <p>The database contains @Model.NrOfFriends friends with the search criteria</p>
    <form method="post" class="needs-validation" method="post" novalidate>
        <label class="form-check-label" for="useSeeds">Use seeded data</label>
        <input asp-for="UseSeeds" class="form-check-input" type="checkbox" id="useSeeds">
        <div class="row row-cols-1 row-cols-lg-4 align-items-stretch g-4 py-5">
            <div class="col-md-7 col-lg-10">
                <div class="row mb-2">
                    <!-- Search filter-->
                   
                    <!--
                        <div class="col-md-6 ">
                            <input asp-for="CountryFilter" class="form-control" type="search" placeholder="Search" aria-label="Search">
                        </div>
                        <div class="col-md-2 ">
                            <button asp-page-handler="Search" class="btn btn-outline-success" type="submit">Search</button>
                        </div>-->
                    
                    <p class="fw-bold">
                        Choose countries
                    </p>
                   
                        <li class="d-flex align-items-center px-3 py-2">
                            <input class="form-check-input ms-3 me-1" type="checkbox" id="countryDenmark" />
                            <label class="form-check-label" for="countryDenmark">Denmark</label>
                            <input class="form-check-input ms-3 me-1" type="checkbox" id="countryFinland" />
                            <label class="form-check-label" for="countryFinland">Finland</label>
                            <input class="form-check-input ms-3 me-1" type="checkbox" id="countryNorway" />
                            <label class="form-check-label" for="countryNorway">Norway</label>
                            <input class="form-check-input ms-3 me-1" type="checkbox" id="countrySweden" />
                            <label class="form-check-label" for="countrySweden">Sweden</label>
                            <input class="form-check-input ms-3 me-1" type="checkbox" id="countryUnknown" />
                            <label class="form-check-label" for="countryUnknown">Unknown</label>
                        </li>
                        
                        <!--<li><a asp-controller="Form" asp-action="InputModelSimple" class="nav-link">Finland</a></li>
                        <li class="nav-item"><a asp-controller="Form" asp-action="InputModelSimple" class="nav-link">Norway</a></li>
                        <li class="nav-item"><a asp-controller="Form" asp-action="InputModelSimple" class="nav-link">Sweden</a></li>-->
            
                </li>
                    </div>
                
                <div class="row mb-2 text-center">
                    <!-- This is where selected item id will be stored -->
                    <input type="hidden" name="friendId" data-seido-selected-item-id-target />

                    <div class="col-md-10 themed-grid-head-col">Friend Name</div>
                    <div class="col-md-2 themed-grid-head-col">
                        
                    </div>
                </div>

                <div class="row mb-2 text-center">
                        @if (Model.Friends is not null)
                        {
                            @foreach (var item in Model.Friends)
                            {
                                <div class="col-md-10 themed-grid-col">
                                    <a href="~/Friends/ViewFriend?id=@item.FriendId">
                                        @item.FirstName @item.LastName
                                    </a>
                                </div>
                                    <div class="col-md-2 themed-grid-col">
                                        <a href="~/Friends/EditFriend?id=@item.FriendId" class="btn btn-secondary btn-sm m-1" type="button">
                                        Edit
                                        </a>
                                    </div>
                            }
                            <nav aria-label="Standard pagination example">
                                <ul class="pagination">
                                    <li class="page-item">
                                        <a class="page-link" href="~Friends/ListOfFriends?pagenr=@Model.PrevPageNr&search=@Model.CountryFilter" aria-label="Previous">
                                            <span aria-hidden="true">&laquo;</span>
                                        </a>
                                    </li>
                                    @for (int i = 0; i < Model.NrVisiblePages; i++)
                                    {
                                        <li class="page-item">
                                            <a class="page-link" href="~/ListOfFriends?pagenr=@i&search=@Model.CountryFilter">@(i + 1)</a>
                                        </li>

                                    }
                                    <li class="page-item">
                                        <a class="page-link" href="~/ListOfFriends?pagenr=@Model.NextPageNr&search=@Model.CountryFilter" aria-label="Next">
                                            <span aria-hidden="true">&raquo;</span>
                                        </a>
                                    </li>
                                </ul>
                            </nav>
                        }

                        <!-- Modal in the form tag -->
                        <div class="modal fade" id="delModal" tabindex="-1" aria-labelledby="softModalLabel" aria-hidden="true">
                            <div class="modal-dialog">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title text-danger" id="softModalLabel">Confirm deletion</h5>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                    </div>
                                    <div class="modal-body">
                                        Hello from modal
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                        <button type="submit" asp-page-handler="DeleteGroup" class="btn btn-primary btn-danger">Ok</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
            </div>
        </div>
    </form>
</div>


